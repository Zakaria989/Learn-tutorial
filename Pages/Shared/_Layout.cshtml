
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnTutorial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnTutorial.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top bg-white algin border-bottom box-shadow  mb-3"   >
            <div class="container  ">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TrimTonic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> 
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-end ">
                    <ul class="navbar-nav d-flex ms-auto">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a href="/index"  class="btn" type="button">
                                Home
                            </a>
                            <a href="/index/#use-cases" class="btn" type="button">
                                    Use cases
                            </a>
                            <a href="/index/#features" class="btn" type="button">
                                    Features
                            </a>
                            <a href="/index/#contact" class="btn" type="button">
                                    Contact
                            </a>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/About">About</a></li>

                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Data Viewer">Data Viewer</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Analytics">Analytics</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/UserProfile">@User.Identity.Name</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/About">About</a></li>
                            <li>
                                        <form method="post" asp-page-handler="logout" asp-page="/Logout">
                                <button type="submit" class="btn btn-white position-right top-0">
                                    Logout
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M2.146 1.146a.5.5 0 01.708 0L6.5 4.793V2.5a.5.5 0 011 0v4a.5.5 0 01-.5.5H2a.5.5 0 010-1h3.793l-3.647-3.646a.5.5 0 010-.708z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </form>
                            </li>
  


                        }

                           


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Zakaria Ahmed  <a asp-area="" asp-page="/About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>