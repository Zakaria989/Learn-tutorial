@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization;
@using System.Configuration;
@using TrimTonic.Models;
@inject AuthenticationStateProvider AuthenticationStateProvider
@model IndexModel 
@{
    ViewData["Title"] = "Home page";
}

<form method="post" asp-page="Index" class="container">
    <div class="p-2 text-center bg-body-tertiary rounded-3" id="home">

        @if (!User.Identity.IsAuthenticated)
        {
            <div class="main_text mt-4 pt-5 jumbotron mt-4" >
                <h1 class="text-body-emphasis">Welcome @Model.User.Identity.Name to a tool that empowers you to take control of your health through better data.</h1>
                <hr class="my-4">
                <h3 class="text-body-emphasis">Stay on top of your health progress with our easy-to-use excel sheets.</h3>
            </div>

            <div class="d-flex justify-content-center mb-5 mt-5 user_not_logged_in">

                <a href="/login" class="btn btn-outline-secondary btn-lg px-4 rounded-pill" type="button">
                    Get started
                </a>
            </div>
                <div class="user_not_logged_in mb-5">
                    <img class="img-fluid  p-3" src="~/images/IndexPic.png" />
                </div>



            <section class="user_not_logged_in pb-5 pt-5" id="use-cases">

                <div class=" mb-5 jumbotron mt-4">
                    <h2>Save time and see results with our user-friendly excel tracking tools</h2>
                    <hr class="my-4">
                    <h3 class="text-center">Designed to be used by everyone with ease</h3>
                </div>
                <div class="container card-deck align-items-center">
                    <div class="row">
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="use-cases-card">
                                <img class="card-img-top" src="~/images/personal_trainer_.svg" alt="Use Case 1 Personal health tracking ">
                                <div class="card-body">
                                    <h5 class="card-title">Personal health tracking</h5>
                                    <p class="card-text">
                                        The website can be used by individuals to track their weight, body measurements, and progress towards their fitness goals. 
                                        The Excel sheets can help users visualize their data and identify patterns or areas where they need to make improvements.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="use-cases-card">
                                <img class="card-img-top " src="~/images/coaching.svg" alt="Use Case 2 Health coaching">
                                <div class="card-body">
                                    <h5 class="card-title">Health coaching</h5>
                                    <p class="card-text">
                                        Health coaches and personal trainers can use the website to help their clients track their progress and stay on track with their fitness goals. 
                                        The Excel sheets can be customized to suit the specific needs of each client, making it easier to monitor progress and provide feedback.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="use-cases-card">
                                <img class="card-img-top" src="~/images/medical_research.svg" alt="Use Case 3 Medical research">
                                <div class="card-body">
                                    <h5 class="card-title">Medical research</h5>
                                    <p class="card-text">
                                        Researchers can use the website to collect data from study participants and track their progress over time. 
                                        The Excel sheets can help researchers visualize the data and identify trends, making it easier to draw conclusions and develop new treatments or interventions.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>



            <div class="user_not_logged_in">
                <img class="img-fluid  p-3" src="~/images/IndexPic.png"  />
            </div>

            <div id="features">
            <hr class="my-4">

            <section class="user_not_logged_in pb-5 pt-5" >
                <div class=" mb-5 jumbotron mt-4">
                <h2>A wide range of features for health in one place</h2>
                <h3 class="text-center">Take control over your healthcare choices with efficient and organized data</h3>
            </div>

            <div class="container card-deck">
                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="~/images/add_user.svg" alt="feature 1 User Profile ">
                            <div class="card-body">
                                <h5 class="card-title">User Profile</h5>
                                <p class="card-text">
                                    Create and manage your own profile with personal information like weight, height, age, and fitness goals.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top h-auto" src="/images/personal_trainin.svg" alt="feature 2 Weight and Measurement Tracking">
                            <div class="card-body">
                                <h5 class="card-title">Weight and Measurement Tracking</h5>
                                <p class="card-text">
                                    Track your weight and body measurements over time with graphs and charts to visualize your progress.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="~/images/target.svg" alt="feature 3 Goal setting">
                            <div class="card-body">
                                <h5 class="card-title">Goal Setting</h5>
                                <p class="card-text">
                                    Set and track progress towards your fitness goals by setting a target weight or desired body fat percentage.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="~/images/spreadsheets.svg" alt="feature 4 Customizable Excel Sheets">
                            <div class="card-body">
                                <h5 class="card-title">Customizable Excel Sheets</h5>
                                <p class="card-text">
                                    Customize your Excel sheets to fit your specific needs by adding columns for tracking metrics or custom formulas for analyzing data.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="~/images/watch_application.svg" alt="feature 5 Fitness Tracker Integration">
                            <div class="card-body">
                                <h5 class="card-title">Fitness Tracker Integration</h5>
                                <p class="card-text">
                                    Connect your fitness tracker, such as Fitbit or Apple Watch, to automatically track your exercise and activity levels.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="~/images/teaching.svg" alt="feature 6 Health Coaching">
                            <div class="card-body">
                                <h5 class="card-title">Health Coaching</h5>
                                <p class="card-text">
                                    Access health coaches or personal trainers to help you develop and 
                                    achieve your fitness goals with features like messaging or video chat for virtual coaching sessions.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
            </div>

            <hr />
            <section class="pt-5" id="contact">
            <div class="container">
                    <h2>Contact Us</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <form action="#" method="post">
                                <div class="form-group">
                                    <label for="name">Name:</label>
                                    <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="subject">Subject:</label>
                                    <input type="text" class="form-control" id="subject" placeholder="Enter subject" name="subject" required>
                                </div>
                                <div class="form-group">
                                    <label for="message">Message:</label>
                                    <textarea class="form-control" rows="5" id="message" name="message" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>

                        </div>
                            <iframe class=" col " src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2046.6192494815155!2d9.669975016138604!3d59.138770033328804!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4646df8bb027abb1%3A0x2c572ce353d0fc32!2sUniversitetet%20i%20S%C3%B8r%C3%B8st-Norge%20%E2%80%93%20campus%20Porsgrunn!5e0!3m2!1sno!2sno!4v1680458648139!5m2!1sno!2sno" width="600" height="450" style="border:0;" allowfullscreen="" 
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                    </div>
                </div>
            </section>




        }

        




    </div>
</form>



